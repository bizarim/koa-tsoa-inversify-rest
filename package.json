  "dependencies": {
    "inversify": "^5.0.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.2.0",
    "koa-router": "^7.4.0",
    "koa-winston": "git+https://nb_met@bitbucket.org/nb_met/koa-winston.git#master",
    "node-uuid": "^1.4.8",
