  "description": "koa, tsoa,inversify 를 이용한 Restful API 만들기",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run lint && npm run tsoa:gen && tsc",
    "start": "npm run lint && npm run lint && tsc && node dist/server.js",
